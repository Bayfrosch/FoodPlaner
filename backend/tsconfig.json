{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node16"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}